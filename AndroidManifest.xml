<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="esgi.priva2peer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.camera" />
    <uses-permission android:name="android.permission.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="esgi.priva2peer.activity.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="esgi.priva2peer.activity.ListFriends" />
        <activity android:name="esgi.priva2peer.activity.MainActivity" />
        <activity android:name="esgi.priva2peer.activity.ChangeProfile" />
        <activity android:name="esgi.priva2peer.activity.AddFriend" />
        <activity android:name="esgi.priva2peer.activity.ChatActivity" />
        <activity
            android:name="esgi.priva2peer.activity.SignUPActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="esgi.priva2peer.Session"
            android:label="@string/title_activity_session" >
        </activity>
        <activity
            android:name="esgi.priva2peer.activity.ServerActivity"
            android:label="@string/title_activity_server" >
        </activity>
        <activity
            android:name="esgi.priva2peer.activity.ClientActivty"
            android:label="@string/title_activity_client_activty" >
        </activity>
    </application>

</manifest>